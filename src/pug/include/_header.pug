// header
header.l-header
  .l-header__inner
    if page === 'top'
      h1.l-header__logo
        a(href="index.html")
          img(
            src="../assets/img/logo.svg"
            alt="SACCK"
            width="98"
            height="24"
          )
    else
      .l-header__logo
        a(href="index.html")
          img(
            src="../assets/img/logo.svg" alt="SACCK"
            width="98"
            height="24"
          )
    button.l-header__menu-button.button.button--hamburger#js-hamburger-button
      svg(
        width="24"
        height="16"
      )
        use(
          xlink:href="#hamburger"
          fill="#fff"
        )
    button.l-header__search-button.button.button--search#js-search-button
      svg(
        width="20" height="20"
      )
        use(
          xlink:href="#search"
          fill="#fff"
        )
    // form
    form.search-form
      input.search-form__field.js-search-field(type="text" name="s" placeholder="Search")
  // overlay
  .overlay.js-drawer-close-trigger
